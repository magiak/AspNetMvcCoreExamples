@model RemoteValidationViewModel

@{
    ViewBag.Title = "Remote Validation";
}

<h2>Remote Validation</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.RemoteAttribute, htmlAttributes: new { @class = "control-label col-md-2" })
            (Value has to starts with character 'H')
            <div class="col-md-10">
                @Html.EditorFor(model => model.RemoteAttribute, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RemoteAttribute, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts { 
    @Scripts.Render("~/bundles/jqueryval") 
}
