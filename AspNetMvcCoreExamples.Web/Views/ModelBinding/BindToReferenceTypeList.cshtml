@model List<ModelBinderArrayViewModel>

@{
    ViewBag.Title = "BindToReferenceTypeList";
}

<h2>Bind To Value Type List</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="form-group">
                @Html.LabelFor(model => model[i].Value, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="input-group">
                        @Html.EditorFor(model => model[i].Value, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="input-group-append">
                            <button type="button" class="btn btn-danger delete">Delete</button>
                        </div>
                    </div>

                    @Html.ValidationMessageFor(model => model[i].Value, "", new { @class = "text-danger" })
                </div>
            </div>
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    <script>
        $(".delete").click(function () {
            $(this).parents(".form-group").remove();
        });
    </script>
}